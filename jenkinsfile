pipeline {
    agent {
        label 'jenkins-slave'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/moranelb/super-app.git', branch: 'main', credentialsId: 'github-creds'
            }
        }
        stage('Build Docker Images') {
            steps {
                script {
                    // Build Docker images
                    sh '/usr/local/bin/docker-compose build'
                }
            }
        }
        stage('Test Application') {
            steps {
                script {
                    // Run Docker Compose
                    sh '/usr/local/bin/docker-compose up -d'
                    
                    // Add your test commands here
                    sleep(60) // wait for the containers to start
                    sh 'curl -f http://10.0.0.28:3000' // test Node.js app
                    sh 'curl -f http://10.0.0.28' // test PHP app
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    // Log in to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh 'echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin'
                    }
                    // Tag and push images
                    sh '/usr/local/bin/docker-compose push'
                }
            }
        }
    }
    post {
        always {
            script {
                // Clean up Docker containers after the pipeline run
                sh '/usr/local/bin/docker-compose down'
            }
        }
    }
}
